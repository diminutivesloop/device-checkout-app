{
  "name": "device-checkout-app",
  "devDependencies": {
    "angular": "^1.4.7",
    "angular-route": "^1.5.5",
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "express": "^4.13.3",
    "ng-templatecache": "^0.1.4",
    "nodemon": "^1.9.2",
    "npm-watch": "^0.1.4"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "watch": {
    "build:js": {
      "patterns": [
        "app/**.html",
        "app/**.js"
      ],
      "extensions": "html,js"
    }
  },
  "scripts": {
    "env": "env",
    "watch": "npm-watch",
    "prebuild:template": "mkdir -p temp",
    "build:template": "node scripts/templateCachePrep.js app/*.html",
    "prebuild:js": "npm run build:template && mkdir -p deploy",
    "build:js": "babel app/*.js temp/templateCacheModule.js -o deploy/compiled.js",
    "build:vendor": "cp node_modules/angular/angular.js node_modules/angular-route/angular-route.js deploy",
    "prebuild": "rm -rf deploy && rm -rf temp",
    "build": "npm run build:js && npm run build:vendor && cp app/index.html deploy",
    "start": "npm run watch & nodemon app.js --watch ./deploy -e js,html"
  }
}
