{
  "name": "device-checkout-app",
  "devDependencies": {
    "angular": "^1.4.7",
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "express": "^4.13.3",
    "ng-templatecache": "^0.1.4"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "scripts": {
    "env": "env",
    "prebuild:html": "mkdir -p temp",
    "build:html": "node scripts/templateCachePrep.js app/*.html",
    "prebuild:js": "mkdir -p deploy",
    "build:js": "babel app/*.js temp/templateCacheModule.js -o deploy/compiled.js",
    "build:vendor": "cp node_modules/angular/angular.js deploy",
    "prebuild": "rm -rf deploy && rm -rf temp",
    "build": "npm run build:html && npm run build:js && npm run build:vendor && cp app/index.html deploy",
    "start": "node app.js"
  }
}
